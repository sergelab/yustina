{% extends 'common.j2' %}

{% block content -%}
    <h1>Персоны</h1>

    {% for group in grouped_persons.values() if group['persons']|length > 0 -%}
        <h2>{{ group['position'].name }}</h2>

        {% for person in group['persons'] -%}
            <a href="{{ url_for('persons.person_card', slug=person.slug) }}" class="person-list-person">
                <div class="person-list-photo">
                    <img src="person-small.jpg" />
                </div>
                <div class="person-list-name">
                    {{ person.fullname }}
                </div>
                <div class="person-list-position">
                    {{ person.positions_as_text() }}
                </div>
                {% if person.short_bio -%}
                    {{ person.short_bio|textile }}
                {%- endif %}
            </a>
        {%- endfor %}
    {%- endfor %}
{%- endblock %}