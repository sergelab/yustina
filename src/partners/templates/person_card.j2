{% extends 'common.j2' %}

{% block content -%}
    <div class="person-list-person" style="background-image: url(/img/IMG_2671.jpg);">
		<h3 class="person-list-name">
			<a href="{{ url_for('partners.person_card', slug=person.slug) }}">{{ person.fullname }}</a>
		</h3>
		<div class="person-list-position">
			{{ person.positions_as_text() }}
		</div>
        {% if person.specialty -%}
            <div class="person-list-specialty">
                {{ person.specialty }}
            </div>
        {%- endif %}
		<div class="person-list-brief-cv">
			{{ person.bio|textile }}
		</div>
	</div>
{%- endblock %}