<header>
    <nav class="large">
        {#- TODO: Меню (выделение)
        К href добаляется класс current -#}
        {% for option in navigation -%}
            <a href="{{ url_for(option.route, **option.route_params) }}">{{ option.caption }}</a>
        {%- endfor %}
        <div>
            {# request.path #}
            <a href="" class="search-button"><img class="search-icon" src="{{ asset_url_for('images/search-icon.svg') }}" /></a>
            {% if settings.language_switcher == True -%}
                {% for code, name in config['LANGUAGES'].items() if code != g.current_language -%}
                    <a href="{{ url_for('setlang', language=code) }}">{{ name }}</a>
                {%- endfor %}
            {%- endif %}
        </div>
    </nav>
    <input type="checkbox" name="menu" id="menu" class="mobile" />
    <nav class="mobile">
        {% for option in navigation -%}
            <a href="{{ url_for(option.route, **option.route_params) }}">{{ option.caption }}</a>
        {%- endfor %}
        {% if settings.language_switcher == True -%}
            {% for code, name in config['LANGUAGES'].items() if code != g.current_language -%}
                <a href="{{ url_for('setlang', language=code) }}">{{ name }}</a>
            {%- endfor %}
        {%- endif %}
        <div>
            <form action="{{ url_for('search') }}" method="get">
                <img src="{{ asset_url_for('images/search-icon-mobile.svg') }}" /><input type="text" name="query" placeholder="{{ _('Search front placeholder') }}" />
            </form>
        </div>
    </nav>
    <label for="menu" class="mobile"><img src="{{ asset_url_for('images/hamburger.svg') }}"></label>
    <div class="header-search-form">
        <form action="{{ url_for('search') }}" method="get">
            <table>
                <tr>
                    <td><input type="text" name="query" placeholder="{{ _('Search front placeholder') }}" /></td>
                    <td><input type="submit" value="{{ _('Search front button') }}"></td>
                </tr>
            </table>
        </form>
    </div>
</header>