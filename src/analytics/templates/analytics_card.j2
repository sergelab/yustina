{% extends 'common.j2' %}

{% block content -%}
    <h1 class="float-right">{{ _('Analytics front heading') }}</h1>
    <a href="{{ url_for('index') }}"><img id="logo" src="{{ asset_url_for('images/logoblue2.svg') }}"></a>
    <div class="clear-both"></div>

    <div class="breadcrumbs">
        <a href="{{ url_for('analytics.analytics') }}">{{ _('Analytics front heading') }}</a> | {{ analytics.title|truncate(100, '...') }}
    </div>

	<h2 class="press-card-title">{{ analytics.title }}</h2>

    {% if analytics.content -%}
	    <div class="press-card-description">{{ analytics.content|textile }}</div>
    {%- endif %}
{%- endblock %}